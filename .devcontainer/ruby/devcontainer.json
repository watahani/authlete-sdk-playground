{
  "name": "Ruby",
  "dockerComposeFile": [
    "./docker-compose.yml",
    "../docker-compose-common.yml"
  ],
  "initializeCommand": "bash .devcontainer/scripts/ensure-env.sh",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}/ruby",
  "service": "worker",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "customizations": {
    "vscode": {
      "extensions": [
        "KoichiSasada.vscode-rdbg",
        "Shopify.ruby-lsp"
      ]
    }
  }
}
